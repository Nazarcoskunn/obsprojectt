@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/login.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700&display=swap" rel="stylesheet">
    <title>Login</title>
</head>
<body>
<header>
    <div class="name-1">
        <h1 class="name-2">
            ABC University
        </h1>
    </div>
</header>
<section>
    <div class="content">
        <form asp-action="Login" method="post">
            <p class="login">Login</p>
            <p class="context">To get started</p>

            <input class="input-1" type="email" id="email" name="email" placeholder="     Email" required /><br>

            <input class="input-2" type="password" id="password" name="password" placeholder="     Password" required />

            <button class="button" type="submit">Continue</button>
        </form>
    </div>
</section>

</body>
</html>
