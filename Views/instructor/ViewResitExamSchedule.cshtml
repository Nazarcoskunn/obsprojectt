@{
    var filePath = ViewBag.FilePath as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Resit Exam Schedule</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/secretaryresit.css" />
    <style>
        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 20px;
        }

        .content {
            max-width: 1000px;
            margin: auto;
            background: white;
            padding: 30px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        .baslık {
            text-align: center;
            margin-bottom: 20px;
            font-size: 28px;
            color: #333;
        }

        .pdf-viewer {
            text-align: center;
            margin-bottom: 30px;
        }

        iframe {
            width: 100%;
            height: 700px;
            border: 1px solid #ccc;
            border-radius: 8px;
        }

        .button-group {
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .button-link, .download-link {
            display: inline-block;
            padding: 12px 25px;
            background-color: #4CAF50;
            color: white;
            text-align: center;
            text-decoration: none;
            border-radius: 6px;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s;
        }

        .button-link:hover, .download-link:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <div class="content">
        <h2 class="baslık">View Resit Exam Schedule</h2>

        @if (!string.IsNullOrEmpty(filePath))
        {
            <div class="pdf-viewer">
                <iframe src="@filePath"></iframe>
            </div>

            <div class="button-group">
                <a class="button-link" asp-controller="Instructor" asp-action="Home">Back to Home</a>
                <a class="download-link" href="@filePath" download>Download PDF</a>
            </div>
        }
        else
        {
            <p style="text-align:center; font-size:20px;">No schedule uploaded yet.</p>
        }
    </div>
</body>
</html>
